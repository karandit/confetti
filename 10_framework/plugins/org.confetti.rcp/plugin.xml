   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="renameEntityAvailable">
         <with
               variable="selection">
            <count
                  value="1">
            </count>
            <iterate
                  ifEmpty="false"
                  operator="and">
               <instanceof
                     value="org.confetti.core.Entity">
               </instanceof>
            </iterate>
         </with>
      </definition>
      <definition
            id="deleteEntityAvailable">
         <with
               variable="selection">
            <iterate
                  ifEmpty="false"
                  operator="and">
               <instanceof
                     value="org.confetti.core.Entity">
               </instanceof>
            </iterate>
         </with>
      </definition>
      <definition
            id="deleteAssignmentAvailable">
         <with
               variable="selection">
            <count
                  value="1">
            </count>
            <iterate
                  ifEmpty="false"
                  operator="and">
               <instanceof
                     value="org.confetti.core.Assignment">
               </instanceof>
            </iterate>
         </with>
      </definition>
      <definition
            id="editConstraintAvailable">
         <with
               variable="selection">
            <count
                  value="1">
            </count>
            <iterate
                  ifEmpty="false"
                  operator="and">
               <instanceof
                     value="org.confetti.core.Constraint">
               </instanceof>
            </iterate>
         </with>
      </definition>
      <definition
            id="editInstituteAvailable">
         <with
               variable="selection">
            <count
                  value="1">
            </count>
            <iterate
                  ifEmpty="false"
                  operator="and">
               <instanceof
                     value="org.confetti.rcp.views.Root">
               </instanceof>
            </iterate>
         </with>
      </definition>


   </extension>

